<div>
    <h2>My Dashboard</h2>
    <div id="all-posts">
        {{#each blogs as |blog|}}
        <div class="homepage-blogs">
        <div class="homepage-blogs-title">
            <h3><a href="/dashboard/{{blog.id}}">{{blog.title}}</a></h3><p>Created by: {{blog.user.name}}</p>
        </div>
        <div class="homepage-blogs-body">{{blog.description}}</div>
        </div>
        {{/each}}
    </div>

    <form action="" id="create-post-form">
        <h3>Create a New Post</h3>
        <div class="create-form-section">
            <label for="title">Post Title:</label>
            <input type="text" id="post-title"/>
        </div>
        <div class="create-form-section">
            <label for="description">Post Description:</label>
            <textarea name="post-description" id="post-description" cols="30" rows="4"></textarea>
        </div>
            <button type="submit" id="create-post">Create New Post</button>
    </form>
</div>

<script src="/js/create-post.js"></script>