<div>
    <h3>Edit This Post: ID <span id="blog-id">{{blog.id}}</span></h3>
    <form action="" id="edit-blog-form">
        <div class="create-form-section">
            <label for="title">Title:</label>
            <input type="text" id="edit-title" name="title" value="{{blog.title}}" required>
        </div>
        <div class="create-form-section">
            <label for="description">Description:</label>
            <textarea name="description" id="edit-description" cols="30" rows="4" required>{{blog.description}}</textarea>
        </div>
        <button type="submit" id="savechanges">Save Changes</button>
    </form>
</div>

<script src="/js/edit-post.js"></script>